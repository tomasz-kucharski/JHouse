<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="display_preferences"
        android:title="@string/label.settings">

    <android.preference.EditTextPreference
            android:defaultValue="127.0.0.1"
            android:key="mqtt.hostName"
            android:title="@string/label.settings.hostName.title"
            android:summary="@string/label.settings.hostName.summary"
            />

    <android.preference.EditTextPreference
            android:defaultValue="xxx"
            android:key="mqtt.topic"
            android:title="@string/label.settings.topic.title"
            android:summary="@string/label.settings.topic.summary"
            />

    <CheckBoxPreference
            android:defaultValue="false"
            android:key="notKnownValue"
            android:title="@string/label.settings.notKnownValue.title"
            android:summary="@string/label.settings.notKnownValue.summary"
            />

</PreferenceScreen>
